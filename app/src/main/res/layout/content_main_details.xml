<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		style="@style/simpleListItem">

		<TextView
			style="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:paddingLeft="20dp"
			android:text="New"/>
	</LinearLayout>

	<ImageView style="@style/divider"/>

	<!-- Buttons -->
	<GridLayout
		android:id="@+id/gridLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="40dp"
		android:columnCount="3"
		android:rowCount="2">

		<net.steamcrafted.materialiconlib.MaterialIconView
			android:id="@+id/addFolder"
			style="@style/gridItemIcon"
			app:materialIcon="folder"
			app:materialIconColor="@color/textSecondary"/>

		<net.steamcrafted.materialiconlib.MaterialIconView
			android:id="@+id/addFromFile"
			style="@style/gridItemIcon"
			app:materialIcon="upload"
			app:materialIconColor="@color/textSecondary"/>

		<net.steamcrafted.materialiconlib.MaterialIconView
			android:id="@+id/addFromCamera"
			style="@style/gridItemIcon"
			app:materialIcon="camera"
			app:materialIconColor="@color/textSecondary"/>

		<TextView
			style="@style/gridItemText"
			android:text="Folder"/>

		<TextView
			style="@style/gridItemText"
			android:text="Upload"/>

		<TextView
			style="@style/gridItemText"
			android:text="Camera"/>
	</GridLayout>

</LinearLayout>